	</update>
	<update id="manageSubscribe" parameterType="java.util.Map">
		UPDATE H_SUBSCRIBE
		<if test='type=="receive" '>
			SET	DIAGNOSE_STATUS = 2
		</if>
		<if test='type=="refuse" '>
