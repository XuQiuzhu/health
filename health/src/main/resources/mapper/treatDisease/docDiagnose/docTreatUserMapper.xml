	<insert id="docDoTreat" parameterType="java.util.Map">
		INSERT INTO H_DIAGNOSE
		  (UUID,USERID,DOCID,SUBSCRIBEID,DESCRIPTION,CONTENT,DISEASETYPE_CODE,CREATETIME)
